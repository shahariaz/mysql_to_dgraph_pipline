# MySQL to Dgraph Pipeline Configuration
# =====================================
# Copy this file to .env and customize for your environment

# MySQL Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=root
MYSQL_DATABASE=dump

# Dgraph Configuration  
DGRAPH_ALPHA_1=localhost:9080
DGRAPH_ALPHA_2=
DGRAPH_ALPHA_3=

# Pipeline Configuration
PIPELINE_WORKERS=4
PIPELINE_BATCH_SIZE=1000
PIPELINE_MEMORY_LIMIT_MB=1024

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Output Configuration
OUTPUT_DIR=output
RDF_FILE=data.rdf
SCHEMA_FILE=schema.txt

# Development/Testing
DRY_RUN=false
SKIP_VALIDATION=false

# Performance Tuning (for large datasets)
# PIPELINE_WORKERS=8
# PIPELINE_BATCH_SIZE=5000
# PIPELINE_MEMORY_LIMIT_MB=4096
